public class Figurki {
    public static void main(String[] args) {
        int[] angles = {90, 90, 90, 90}; // Тут можна міняти як завгодно
        
        int n = angles.length;
        
        int angleSum = 0;
        for (int angle : angles) {
            angleSum += angle;
        }
        
        int expectedSum = 180 * (n - 2);
        
        if (angleSum == expectedSum) {
            System.out.println("Цей багатокутник може існувати.");
        } else {
            System.out.println("Цей багатокутник не може існувати(.");
        }
    }
}
